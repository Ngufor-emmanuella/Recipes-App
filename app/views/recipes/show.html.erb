<h1><%= @recipe.name %></h1>
<p>Preparation time: <%= @recipe.preparation_time %>hour(s)</p>
<p>Cooking time: <%= @recipe.cooking_time %>hour(s)</p>
<p>Public: <%= @recipe.public%></p>
<p>Steps go here...<p><ul><%= @recipe.description %></ul>
<br>
<%= button_to "Generate shopping list" %>
<br>
<%= link_to "Add ingredient", new_user_recipe_recipe_food_path(params[:user_id], params[:id] )%>
<hr>
<table class="table">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Value</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.recipe_foods.each do |recipe_food| %>
        <tr>
          <td><%= recipe_food.food.name %></td>
          <td><%= recipe_food.quantity %></td>
          <td>$ <%= recipe_food.food.price * recipe_food.quantity %></td>
          <td>
              <%= link_to 'Modify', user_recipes_path%>
              <%= button_to 'Remove', user_recipe_recipe_food_path(params[:user_id], params[:id], recipe_food), method: :delete %>
          </td>
        </tr>
      <% end %>
  </table>
<%= button_to "Back to List of Recipes", user_recipes_path, method: :get%>
